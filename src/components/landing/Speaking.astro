---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
const speechesAndTalks = [
  {
    period: "2026",
    title: "Interface Truths Under Constraint",
    description:
      "A talk on designing UI when performance, latency, and imperfect data are the default—how to make trade-offs explicit and still ship clarity.",
    category: {
      label: "Product Design",
      href: "#_",
    },
  },
  {
    period: "2026",
    title: "Typography as Infrastructure",
    description:
      "Why type systems aren’t decoration: rhythm, hierarchy, and density as tools for cognition, speed, and decision-making in complex interfaces.",
    category: {
      label: "Typography",
      href: "#_",
    },
  },
  {
    period: "2026",
    title: "State Machines for Humans",
    description:
      "Practical approaches to modeling UI states, edge cases, and failure modes so products behave predictably under real-world pressure.",
    category: {
      label: "Engineering Systems",
      href: "#_",
    },
  },
  {
    period: "2025",
    title: "Speed is a Feature",
    description:
      "Perceived performance tactics: skeletons, progressive disclosure, optimistic UI, and knowing when faking speed destroys trust.",
    category: {
      label: "Performance UX",
      href: "#_",
    },
  },
  {
    period: "2024",
    title: "Design Critique Without Mercy",
    description:
      "A framework for critique that produces better work by isolating constraints, naming decisions, and killing ambiguity fast.",
    category: {
      label: "Practice",
      href: "#_",
    },
  },
];
---

<section class="scroll-mt-32" id="speaking">
  <Wrapper variant="standard" class="py-12 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start">
      <div class="lg:col-start-2">
        <Text tag="p" variant="textSM" class="text-base-600 dark:text-base-300">
          Speeches & Talks
          <br />
          Selected Sessions
        </Text>
      </div>
      <Text
        tag="h2"
        variant="textXL"
        class="font-semibold leading-snug tracking-tighter lg:col-span-2 text-base-900 dark:text-white"
      >
        Speeches & Talks
      </Text>
    </div>
    <div class="flex flex-col gap-12 mt-12">
      {
        speechesAndTalks.map((item) => (
          <article class="py-12 border-t border-base-200 dark:border-base-800">
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-4 items-start">
              {/* Year */}
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-300 uppercase"
              >
                {item.period} — {item.category.label}
              </Text>
              {/* Title */}
              <Text
                tag="h3"
                variant="textLG"
                class="text-base-900 dark:text-white leading-tight font-semibold"
              >
                {item.title}
              </Text>
              {/* Description */}
              <Text
                tag="p"
                variant="textSM"
                class="text-base-600 dark:text-base-300"
              >
                {item.description}
              </Text>
              {/* Category (linked, original position) */}
              <a
                href={item.category.href}
                class=" lg:ml-auto text-base-900 dark:text-white hover:text-accent-600 transition"
              >
                <span class="sr-only"> Visit {item.category.label}</span>
                <ArrowRight class="size-4" />
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </Wrapper>
</section>
