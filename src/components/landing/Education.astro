---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const education = [
  {
    period: "Ongoing",
    title: "Self-Directed Study",
    description:
      "Independent, long-form study driven by primary sources, reverse engineering, and applied experimentation rather than course completion.",
    category: "Autodidactic",
  },
  {
    period: "Advanced Focus",
    title: "Design & Visual Systems",
    description:
      "Training in typography, layout, proportion, and hierarchy with emphasis on constraint-based decision-making and visual clarity under pressure.",
    category: "Design Education",
  },
  {
    period: "Foundational",
    title: "Frontend Engineering",
    description:
      "Practical study of modern frontend systems including component architectures, state management, performance constraints, and accessibility.",
    category: "Software Engineering",
  },
  {
    period: "Applied Theory",
    title: "Systems Thinking",
    description:
      "Study of complex systems, feedback loops, second-order effects, and failure modes across technical and organizational domains.",
    category: "Systems Theory",
  },
  {
    period: "Continuous Practice",
    title: "Typography & Reading Discipline",
    description:
      "Ongoing typographic analysis through reproduction, teardown of historical work, and high-frequency iteration to sharpen visual judgment.",
    category: "Visual Literacy",
  },
  {
    period: "Cross-Disciplinary",
    title: "Product & Decision Making",
    description:
      "Study of trade-offs, prioritization, and decision frameworks informed by real-world constraints rather than idealized process models.",
    category: "Product Thinking",
  },
  {
    period: "Technical Literacy",
    title: "Computational Foundations",
    description:
      "Understanding of algorithms, data structures, and computational limits sufficient to reason about performance, scale, and system behavior.",
    category: "Computer Science",
  },
  {
    period: "Ongoing",
    title: "Critical Reading & Writing",
    description:
      "Structured reading and synthesis across design, technology, philosophy, and economics to build durable mental models and language precision.",
    category: "Intellectual Formation",
  },
];
---

<section class="scroll-mt-32" id="education">
  <Wrapper variant="standard" class="py-12 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start">
      <div class="lg:col-start-2">
        <Text tag="p" variant="textSM" class="text-base-600 dark:text-base-300">
          Education & Formation
          <br />
          Ongoing
        </Text>
      </div>

      <Text
        tag="h2"
        variant="textXL"
        class="font-semibold leading-snug tracking-tighter lg:col-span-2 text-base-900 dark:text-white"
      >
        Education
      </Text>
    </div>

    <div class="flex flex-col gap-12 mt-12">
      {
        education.map((item) => (
          <article class="py-12 border-t border-base-200 dark:border-base-800">
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-4 items-start">
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-300 uppercase"
              >
                {item.period}
              </Text>

              <Text
                tag="h3"
                variant="textLG"
                class="text-base-900 dark:text-white leading-tight font-semibold"
              >
                {item.title}
              </Text>

              <Text
                tag="p"
                variant="textSM"
                class="text-base-600 dark:text-base-300"
              >
                {item.description}
              </Text>

              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-300 uppercase lg:ml-auto lg:col-start-4"
              >
                {item.category}
              </Text>
            </div>
          </article>
        ))
      }
    </div>
  </Wrapper>
</section>
