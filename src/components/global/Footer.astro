---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const links = [
  { href: "https://donate.stripe.com/test_your_link", text: "Support", external: true },
  { href: "https://discord.gg/TFnwuGB5", text: "Discord", external: true },
  { href: "https://github.com/mxchestnut/nerdguild", text: "GitHub", external: true },
];
const year = new Date().getFullYear();
---

<footer>
  <Wrapper variant="standard" class="py-2">
    <div class="grid grid-cols-2 lg:grid-cols-4 items-start">
      <div
        class="flex items-center gap-2 text-base-600 dark:text-base-300 text-xs tracking-tight"
      >
        {year} Nerdchurch Partners Corporation
      </div>
      <div class="flex flex-wrap gap-8 text-sm items-center">
        {
          links.map((link) => (
            <a
              href={link.href}
              target={link.external ? "_blank" : undefined}
              rel={link.external ? "noopener noreferrer" : undefined}
              class="text-base-600 tracking-tight text-xs hover:text-base-900 dark:text-base-300 hover:dark:text-white transition-colors"
            >
              {link.text}
            </a>
          ))
        }
      </div>
    </div>
  </Wrapper>
</footer>
