<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager</title>
  <script is:inline>
    window.CMS_MANUAL_INIT = true;
  </script>
</head>
<body>
  <script is:inline src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  <script is:inline type="module">
    CMS.init({
      config: {
        backend: {
          name: 'github',
          repo: 'mxchestnut/npc',
          branch: 'main',
          base_url: 'https://why7srp6rwhg75gzeg4i3cwfqq0xgzoe.lambda-url.us-east-1.on.aws',
          auth_endpoint: '/'
        },
        media_folder: 'public/images/uploads',
        public_folder: '/images/uploads',
        collections: [
          {
            name: 'posts',
            label: 'Blog Posts',
            folder: 'src/content/posts',
            create: true,
            slug: '{{slug}}',
            fields: [
              { label: 'Title', name: 'title', widget: 'string' },
              { label: 'Description', name: 'description', widget: 'text' },
              { label: 'Publish Date', name: 'publishedAt', widget: 'datetime' },
              { label: 'Category', name: 'category', widget: 'select', options: ['Hieroscope', 'The Beacon Project', 'Roots & Reach', 'Nerd Church', 'Nerd Guild'] },
              { label: 'Tags', name: 'tags', widget: 'list', required: false },
              { label: 'Draft', name: 'draft', widget: 'boolean', default: false, required: false },
              { label: 'Body', name: 'body', widget: 'markdown' }
            ]
          }
        ]
      }
    });
  </script>
</body>
</html>
